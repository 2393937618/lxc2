<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    //圈子总布局
    <LinearLayout
        android:id="@+id/circleall_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        //左边布局
        <LinearLayout
            android:id="@+id/circleall_layout1"
            android:layout_width="160dp"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    />
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="#ebd5d5
"
                    android:layout_alignBottom="@+id/pic"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游记"

                    android:layout_alignBottom="@+id/img1"/>

            </RelativeLayout>

            //底部按钮布局
            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_alignParentLeft="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_location"/>
                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:layout_toRightOf="@+id/image1"
                    android:layout_marginLeft="5dp"/>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/add"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>//底部按钮布局结束//底部按钮布局结束
            <TextView
                android:id="@+id/content_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="哈哈哈"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
            //最底部布局
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/user_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zzk"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>
                <ImageButton
                    android:id="@+id/like_pic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/dz"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"/>
                <TextView
                    android:id="@+id/like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>//最底部布局结束

        </LinearLayout>//左布局结束
        //右边布局
        <LinearLayout
            android:id="@+id/circleall_layout2"
            android:layout_width="160dp"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    />
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="#ebd5d5
"
                    android:layout_alignBottom="@+id/pic2"/>
                <TextView
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"

                    android:layout_alignBottom="@+id/img"/>

            </RelativeLayout>

            //底部按钮布局
            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_alignParentLeft="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/my_location"/>
                <TextView
                    android:id="@+id/place_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:layout_toRightOf="@+id/image2"
                    android:layout_marginLeft="5dp"/>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/add"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>//底部按钮布局结束
            <TextView
                android:id="@+id/content_text2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="樱花来赏👆"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
            //最底部布局
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/user_pic2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/user_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cxk"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>
                <ImageButton
                    android:id="@+id/like_pic2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/dz"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"/>

                <TextView
                    android:id="@+id/like_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>//最底部布局结束



        </LinearLayout>//右布局结束

    </LinearLayout>//总布局结束


</LinearLayout>